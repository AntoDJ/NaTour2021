<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE8C4D"
    android:backgroundTint="#73EE8C4D"
    tools:context="Login.RegistrationView">

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="270sp"
        android:layout_height="25sp"
        android:fontFamily="@font/neuemontreal"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <EditText
        android:id="@+id/emailPlainText"
        android:layout_width="270sp"
        android:layout_height="45sp"
        android:layout_marginTop="4sp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:fontFamily="@font/neuemontreal"
        android:paddingHorizontal="5sp"
        android:hint="Inserisci email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="270sp"
        android:layout_height="25sp"
        android:layout_marginTop="28sp"
        android:fontFamily="@font/neuemontreal"
        android:text="Password:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailPlainText" />

    <TextView
        android:id="@+id/confermaPasswordTextView"
        android:layout_width="270sp"
        android:layout_height="25sp"
        android:layout_marginTop="28sp"
        android:fontFamily="@font/neuemontreal"
        android:text="Conferma password:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordRegistrationPlainText" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="270sp"
        android:layout_height="50sp"
        android:background="@drawable/base_button"
        android:fontFamily="@font/neuemontreal"
        android:text="Registrati"
        app:backgroundTint="#4AB261"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confermaPasswordRegistrationPlainText"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/confermaPasswordRegistrationPlainText"
        android:layout_width="270sp"
        android:layout_height="45sp"
        android:layout_marginTop="4sp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:fontFamily="@font/neuemontreal"
        android:paddingHorizontal="5sp"
        android:hint="Reinserisci Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confermaPasswordTextView" />

    <EditText
        android:id="@+id/passwordRegistrationPlainText"
        android:layout_width="270sp"
        android:layout_height="45sp"
        android:layout_marginTop="4sp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:fontFamily="@font/neuemontreal"
        android:paddingHorizontal="5sp"
        android:hint="Inserisci password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="151sp"
        android:layout_height="241sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <FrameLayout
        android:id="@+id/registrationFrameLayout"
        android:layout_width="304dp"
        android:layout_height="397dp"
        android:elevation="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>