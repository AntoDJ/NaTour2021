<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE8C4D"
    android:backgroundTint="#73EE8C4D"
    tools:context="Login.RegistrationView">

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_marginTop="228dp"
        android:text="Email:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailPlainText"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:hint="Inserisci email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:text="Password:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailPlainText" />

    <TextView
        android:id="@+id/confermaPasswordTextView"
        android:layout_width="270dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="Conferma password:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordRegistrationPlainText" />

    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/base_button"
        android:text="Registrati"
        app:backgroundTint="#006600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confermaPasswordRegistrationPlainText" />

    <EditText
        android:id="@+id/confermaPasswordRegistrationPlainText"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:hint="Reinserisci Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confermaPasswordTextView" />

    <EditText
        android:id="@+id/passwordRegistrationPlainText"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_plain_text"
        android:ems="10"
        android:hint="Inserisci password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>