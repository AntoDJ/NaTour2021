<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE8C4D"
    android:backgroundTint="#73EE8C4D"
    tools:context="Login.ui.home.HomeFragment" >

    <Button
        android:id="@+id/createPathButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Crea un nuovo sentiero"
        android:background="@drawable/base_button"
        app:layout_constraintBottom_toTopOf="@+id/findPathButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.813" />

    <Button
        android:id="@+id/findPathButton"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginBottom="164dp"
        android:text="Cerca un sentiero"
        android:background="@drawable/base_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>