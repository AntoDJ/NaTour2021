<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EE8C4D"
    android:backgroundTint="#73EE8C4D"
    tools:context="Login.ui.settings.SettingsFragment">

    <Button
        android:id="@+id/changePassButton"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108sp"
        android:background="@drawable/base_button"
        android:text="Cambia password"
        android:fontFamily="@font/neuemontreal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <FrameLayout
        android:id="@+id/SettingsContainer"
        android:layout_width="308sp"
        android:layout_height="390sp"
        android:elevation="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/LogoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/changePassButton"
        app:layout_constraintVertical_bias="0.525">

    </FrameLayout>

    <Button
        android:id="@+id/LogoutButton"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68sp"
        android:background="@drawable/base_button"
        android:text="Esci"
        app:backgroundTint="#4AB261"
        android:fontFamily="@font/neuemontreal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePassButton"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="46sp"
        android:layout_marginTop="116sp"
        android:fontFamily="@font/neuemontreal"
        android:text="Cosa desideri fare?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>